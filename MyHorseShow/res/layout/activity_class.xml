<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_color"
    android:orientation="vertical" >
    
	<TextView
	    android:id="@+id/class_header_label"
	    style="@style/activity_header_text_view_style"
	    android:textColor="@color/main_font_color" />
	
	<LinearLayout
	    style="@style/match_parent_style"
	    android:orientation="horizontal">
	    
	    <ImageView
	        android:id="@+id/class_course_image_view"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:contentDescription="@string/class_course_image_description"
	        android:layout_weight="2" />
	    
	    <ListView
	        android:id="@+id/class_riders_list_view"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1" />
	    
	</LinearLayout>

</LinearLayout>