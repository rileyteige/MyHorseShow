<resources>

    <style name="AppTheme" parent="android:Theme.Holo" />

    <style name="activity_header_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/activity_header_text_size</item>
        <item name="android:textColor">@color/main_font_color</item>
        <item name="android:layout_margin">@dimen/activity_header_text_margin</item>
    </style>
    
    <style name="activity_subheader_text_view_style" parent="@style/activity_header_text_view_style">
        <item name="android:textSize">@dimen/activity_subheader_text_size</item>
    </style>
    
    <style name="main_button_style">
        <item name="android:background">@drawable/main_button_background_color</item>
        <item name="android:textColor">@drawable/main_button_foreground_color</item>
    </style>
    
    <style name="dark_background_button_style">
        <item name="android:background">@color/main_background_color</item>
        <item name="android:textColor">@color/darker_blue</item>
    </style>
    
</resources>