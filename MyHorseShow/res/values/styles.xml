<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo" />

    <!-- Short-hand for these two attributes. -->
    <style name="match_parent_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="activity_header_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/activity_header_text_size</item>
        <item name="android:textColor">@color/main_font_color</item>
        <item name="android:layout_margin">@dimen/activity_header_text_margin</item>
    </style>
    
    <style name="activity_subheader_text_view_style" parent="@style/activity_header_text_view_style">
        <item name="android:textSize">@dimen/activity_subheader_text_size</item>
    </style>
    
    <style name="main_button_style">
        <item name="android:background">@drawable/main_button_background_color</item>
        <item name="android:textColor">@drawable/main_button_foreground_color</item>
    </style>
    
    <style name="dark_background_button_style">
        <item name="android:background">@drawable/dark_background_button_background_color</item>
        <item name="android:textColor">@drawable/dark_background_button_foreground_color</item>
    </style>
    
    <style name="event_button_style" parent="@style/main_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:paddingTop">@dimen/event_button_text_margin</item>
        <item name="android:paddingBottom">@dimen/event_button_text_margin</item>
        <item name="android:textSize">@dimen/activity_subheader_text_size</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="row_view_event_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/row_view_event_date_text_size</item>
        <item name="android:textColor">@color/main_font_color</item>
        <item name="android:layout_marginLeft">@dimen/activity_header_text_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_header_text_margin</item>
    </style>
    
</resources>